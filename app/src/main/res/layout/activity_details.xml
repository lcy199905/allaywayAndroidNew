<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.DetailsActivity">

    <include layout="@layout/nav_bar"></include>

    <TextView
        android:id="@+id/details_work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:maxEms="8"
        android:maxLines="1"
        android:text=""/>


    <ListView
        android:id="@+id/details_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/details_work_time_data"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/details_user_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/details_user_name"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:gravity="center"
            android:maxEms="7"
            android:maxLines="1"
            android:text=""/>

    </LinearLayout>


</LinearLayout>
